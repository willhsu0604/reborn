<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration>

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}][%-5p](%c{1}:%L): %m%n"/>
        </layout>
    </appender>

    <logger name="org.springframework">
        <level value="WARN"/>
    </logger>

    <logger name="ch.qos.logback">
        <level value="FATAL"/>
    </logger>

    <logger name="org.hibernate.validator">
        <level value="ERROR"/>
    </logger>

    <logger name="org.eclipse">
        <level value="ERROR"/>
    </logger>

    <logger name="org.eclipse.jetty">
        <level value="ERROR"/>
    </logger>

    <logger name="org.eclipse.jetty.servlet.ServletHandler">
        <level value="ERROR"/>
    </logger>

    <logger name="org.reflections.Reflections">
        <level value="ERROR"/>
    </logger>

    <logger name="org.apache">
        <level value="ERROR"/>
    </logger>

    <logger name="org.apache.zookeeper">
        <level value="ERROR"/>
    </logger>

    <logger name="org.spark-project.jetty">
        <level value="ERROR"/>
    </logger>

    <logger name="akka">
        <level value="ERROR"/>
    </logger>

    <logger name="/">
        <level value="ERROR"/>
    </logger>

    <logger name="org.apache.hadoop.conf.Configuration">
        <level value="ERROR"/>
    </logger>

    <logger name="DataNucleus">
        <level value="ERROR"/>
    </logger>
    <logger name="org.I0Itec">
        <level value="ERROR"/>
    </logger>

    <root>
        <level value="INFO"/>
        <appender-ref ref="console"/>
    </root>

</log4j:configuration>
